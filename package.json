{
  "name": "no.runely.jslogic",
  "version": "1.3.2",
  "main": "app.js",
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@tsconfig/node12": "12.1.4",
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.3.12",
    "@types/node": "24.0.14",
    "@types/source-map-support": "0.5.10",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "moment-timezone": "0.6.0"
  },
  "scripts": {
    "refresh": "rm -rf node_modules/ && rm package-lock.json && npm i",
    "build": "tsc",
    "test": "standard && env TZ=UTC jest",
    "fix": "standard --fix",
    "homey-run": "homey app run --clean --remote",
    "homey-install": "npm run test && homey app install",
    "homey-publish": "npm run test && homey app publish"
  },
  "repository": {
    "url": "https://github.com/runely/jslogic-homey"
  },
  "license": "GPL-3.0-or-later",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "testMatch": [
      "**/tests/**/*test.[jt]s?(x)",
      "**/?(*.)+.(spec|test).[jt]s?(x)"
    ]
  }
}
